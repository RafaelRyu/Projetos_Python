import random
def opcaoMenu():
    print("*------Cassino do Henrique------*")
    print("1 - Jogar;\n2 - Depositar;\n3 - Sair")
    escolha = input("Escolha uma das opÃ§Ãµes (1-3): ")
    try:
     escolha = int(escolha)
     while escolha != 1 and escolha != 2 and escolha != 3:
        print("Por favor, escolha uma das opÃ§Ãµes do menu (1-3): ")
        escolha = int(input("Escolha uma das opÃ§Ãµes"))
     return escolha
    except ValueError:
     print("Por favor, insira uma das opÃ§Ãµes do menu")
     return escolha

def sortear():
    itens = ("âš½","âš¾","ğŸ€","ğŸ","ğŸˆ","ğŸ±")
    #CompreensÃ£o de lista para escolher trÃªs itens
    itensSorteados = [random.choice(itens) for item in range(3)]

    return itensSorteados


def calcularPagamento(resultado, aposta):
    if resultado[0] == resultado[1] == resultado[2]:
        if resultado[0] == "âš½":
            aposta *= 10
        elif resultado[0] == "âš¾":
            aposta *= 20
        elif resultado[0] == "ğŸ€":
            aposta *= 30
        elif resultado[0] == "ğŸ":
            aposta *= 40
        elif resultado[0] == "ğŸˆ":
            aposta *= 50
        elif resultado[0] == "ğŸ±":
            aposta *= 60
        else:
            print("Um erro inesperado ocorreu")
            aposta = 0
        print(f"VocÃª ganhou R${aposta:,.2f} !")

    elif resultado[0] == resultado[1] or resultado[0] == resultado[2] or resultado[1] == resultado[2]:
        if resultado.count("âš½") == 2:
            aposta = 20
        elif resultado.count("âš¾") == 2:
            aposta = 30
        elif resultado.count("ğŸ€") == 2:
            aposta = 40
        elif resultado.count("ğŸ") == 2:
            aposta = 50
        elif resultado.count("ğŸˆ") == 2:
            aposta = 60
        elif resultado.count("ğŸ±") == 2:
            aposta = 100
        else :
            print("Um erro inesperado ocorreu !")
            aposta +=0

        print(f"VocÃª ganhou R${aposta:,.2f} !")

    else:
     print("VocÃª perdeu :(")

     aposta = 0

    return aposta

def main():

    saldo = 0
    programaRodando = True

    while programaRodando:
        opcao = opcaoMenu()

        match opcao:
            case 1:
                if saldo <= 0:
                    print("Seu saldo deve ser maior do que zero para poder jogar, digite 2 para efetuar um depÃ³sito")
                    acessoPermitido = False
                else:
                    acessoPermitido = True
            case 2:
                deposito = input("Digite o valor do seu depÃ³sito: ")

                acessoPermitido = True
                try:
                    deposito = float(deposito)
                    if deposito <= 0:
                        print("Por favor, insira um valor maior do que zero")
                        acessoPermitido = False
                    else:
                        print(f"Seu depÃ³sito de R${deposito} foi concluÃ­do com sucesso !")
                        saldo += deposito
                        acessoPermitido = False

                except ValueError:
                 print("Por favor, digite uma das opÃ§Ãµes do menu")
                 acessoPermitido = False

            case 3:
             programaRodando = False
             acessoPermitido = False

            case _:
                programaRodando = True
                acessoPermitido = False


        if acessoPermitido:


             aposta = input("Qual valor vocÃª deseja apostar ?: ")
             try:
                 aposta = float(aposta)
                 if aposta <= saldo:
                     while aposta <= 0:
                         print("Por favor, insira um valor maior do que zero: ")
                         aposta = float(input("Qual valor vocÃª deseja apostar ?: "))

                     saldo -= aposta

                     resultado = sortear()
                     print(" | ".join(resultado)) #Mostra o resultado

                     pagamento = calcularPagamento(resultado, aposta)
                     saldo += pagamento
                     print(f"Seu saldo Ã© R${saldo:,.2f}")
                 else:
                     print("Sua aposta deve ser menor ou igual ao seu saldo !")
             except ValueError:
                 print("Por favor, digite um valor vÃ¡lido !")

    print("VocÃª saiu do programa, volte sempre")

if __name__ == "__main__":
    main()
